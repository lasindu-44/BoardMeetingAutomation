<!--Add a New Company Modal PoPup-->

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">ADD NEW SECTOR</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>

                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">SectorId:</label>
                        <input type="text" class="form-control" id="sectorid">
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Sector Name:</label>
                        <input type="text" class="form-control" id="sectorname">
                    </div>
                  
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="SaveSector()">Save</button>
            </div>
        </div>
    </div>
</div>


